#include<stdio.h>
int main()
{
   int n;
  scanf("%d",&n);
   int i,j,k;
  for(i=1;i<=n;i++)
   {
     for(j=1;j<i;j++)
     {
        printf(" ");
     }
   for(k=1;k<=(2*n-(2*i-1));k++)
    {
       if(i==1)
         printf("*");
       else
       {
          if(k==1||k==(2*n-(2*i-1)))
           {
              printf("*");
           }
          else
          {
             printf(" ");
          }
        }
   }
          printf("\n");
   }
return 0;
}
