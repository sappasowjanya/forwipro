#include <stdio.h>

int main(void) {
	// your code goes here
    int n;
    scanf("%d",&n);
    int i,j,k;
   for(i=1;i<=n;i++)
    {
     for(j=1;j<i;j++)
     {
       printf(" ");

     }
    for(k=1;k<=(n*2-(2*i-1));k++)
    {
       printf("*");
    }
    printf("\n");
   }
	return 0;
}
