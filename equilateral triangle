        * 
      * * * 
    * * * * * 
  * * * * * * * 
* * * * * * * * * 




#include <stdio.h>

int main(void) {
	// your code goes here
      int n;
     scanf("%d",&n);
     int i,j;
     for(i=1;i<=n;i++)
      {
        for(j=i;j<n;j++)
         {
          printf("  ");
         }
        for(j=1;j<=2*i-1;j++)
         {
           printf("* ");
         }
       printf("\n");
     }
	return 0;
}
